{% extends '@OHMediaBackend/base.html.twig' %}

{% block meta_title %}{{ form_entity }} | Forms{% endblock %}

{% block breadcrumbs %}
  {{ bootstrap_breadcrumbs(
    bootstrap_breadcrumb(bootstrap_icon('ui-checks') ~ ' Forms', 'form_index'),
    bootstrap_breadcrumb(form_entity),
  ) }}
{% endblock %}

{% set can_create_form_field = is_granted(attributes.form_field.create, new_form_field) %}

{% set create_form_field_href = path('form_field_create', {id: form_entity.id}) %}

{% block actions %}
  <div class="btn-group btn-group-sm">
    {% if can_create_form_field %}
      <a href="{{ create_form_field_href }}" class="btn btn-sm btn-primary">
        {{ bootstrap_icon('plus-lg') }} Add Form Field
      </a>
    {% endif %}

    {% if is_granted(attributes.form.edit, form_entity) %}
      <a class="btn btn-primary" href="{{ path('form_edit', {id: form_entity.id}) }}">
        {{ bootstrap_icon('pencil') }}
        Edit
      </a>
    {% endif %}

    {% if is_granted(attributes.form.duplicate, form_entity) %}
      <a class="btn btn-primary" href="{{ path('form_duplicate', {id: form_entity.id}) }}">
        {{ bootstrap_icon('copy') }}
        Duplicate
      </a>
    {% endif %}

    {% if is_granted(attributes.form.delete, form_entity) %}
      <a class="btn btn-danger" href="{{ path('form_delete', {id: form_entity.id}) }}" data-confirm="Are you sure you want to delete this form? Clicking OK will take you to a verification step to delete this entry.">
        {{ bootstrap_icon('trash') }}
        Delete
      </a>
    {% endif %}
  </div>
{% endblock %}

{% set form_field_count = form_entity.fields|length %}

{% block main %}
  <div class="card">
    <div class="card-body">
      <div class="card-title card-title-with-count">
        <h1 class="card-title-heading">Fields</h1>
        <div class="card-title-count">
          <span class="badge text-bg-primary">{{ form_field_count }}</span>
        </div>
      </div>
      <h2 class="card-subtitle mb-3 text-body-secondary h5">{{ form_entity }}</h2>

      {% if form_field_count %}
        <table class="table table-striped">
          <thead>
            <tr>
              <th style="width:1rem">&nbsp;</th>
              <th style="max-width:300px">Label</th>
              <th>Required</th>
              <th>Type</th>
              <th>Last Updated</th>
              <th></th>
            </tr>
          </thead>
          <tbody
            data-sortable
            data-sortable-csrf-name="{{ csrf_token_name }}"
            data-sortable-csrf-token="{{ csrf_token(csrf_token_name) }}"
            data-sortable-url="{{ path('form_field_reorder_post', {id: form_entity.id}) }}"
          >
          {% for form_field in form_entity.fields %}
            <tr data-id="{{ form_field.id }}">
              <td data-handle>{{ bootstrap_icon('arrows-move') }}</td>
              <td>
                {{ form_field }}
                {% if form_field.help %}
                  <small class="d-block text-muted">{{ form_field.help }}</small>
                {% endif %}
              </td>
              <td>
                {% if form_field.required %}
                  <span class="badge text-bg-success">Yes</span>
                {% else %}
                  <span class="badge text-bg-secondary">No</span>
                {% endif %}
              </td>
              <td>{{ form_field.typeReadable }}</td>
              <td>{{ form_field.updatedAt|datetime }}</td>
              <td>
                {% if is_granted(attributes.form_field.edit, form_field) %}
                  <a class="btn btn-sm btn-primary btn-action" href="{{ path('form_field_edit', {id: form_field.id}) }}" title="Edit">
                    {{ bootstrap_icon('pencil') }}
                    <span class="visually-hidden">Edit</span>
                  </a>
                {% endif %}

                {% if is_granted(attributes.form_field.delete, form_field) %}
                  <a class="btn btn-sm btn-danger btn-action" href="{{ path('form_field_delete', {id: form_field.id}) }}" title="Delete" data-confirm="Are you sure you want to delete this form field? Clicking OK will take you to a verification step to delete this entry.">
                    {{ bootstrap_icon('trash') }}
                    <span class="visually-hidden">Delete</span>
                  </a>
                {% endif %}
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      {% else %}
        <p>
          No form fields found.
          {% if can_create_form_field %}
            <a href="{{ create_form_field_href }}">
              Click here to add a form field.
            </a>
          {% endif %}
        </p>
      {% endif %}
    </div>
  </div>
{% endblock %}
