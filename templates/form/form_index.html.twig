{% extends '@OHMediaBackend/base.html.twig' %}

{% block meta_title %}Forms{% endblock %}

{% block breadcrumbs %}
  {{ bootstrap_breadcrumbs(
    bootstrap_breadcrumb(bootstrap_icon('ui-checks') ~ ' Forms', 'form_index'),
  ) }}
{% endblock %}

{% set can_create_form = is_granted(attributes.form.create, new_form) %}

{% set create_form_href = path('form_create') %}

{% block actions %}
  {% if can_create_form %}
    <a href="{{ create_form_href }}" class="btn btn-sm btn-primary">
      {{ bootstrap_icon('plus-lg') }} Add Form
    </a>
  {% endif %}
{% endblock %}

{% block main %}
  {% set form_count = pagination.count %}

  <div class="card">
    <div class="card-body">
      <div class="card-title card-title-with-count">
        <h1 class="card-title-heading">Forms</h1>
        <div class="card-title-count">
          {{ bootstrap_badge_primary(form_count) }}
        </div>
      </div>

      {{ form_start(search_form) }}
        <div class="row align-items-end">
          <div class="col-lg-6 col-sm-6">
            {{ form_row(search_form.search) }}
          </div>
          <div class="col-lg-6 col-sm-6">
            {{ form_row(search_form.status) }}
          </div>
          <div class="col-lg-12 col-sm-6">
            <button class="btn btn-outline-dark mb-3" type="submit">Search</button>
            <a class="btn btn-secondary mb-3" href="{{ path('form_index') }}">Reset</a>
          </div>
        </div>
      {{ form_end(search_form) }}

      {% if form_count %}
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Recipients</th>
              <th>Shortcode</th>
              <th>Last Updated</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {% for form_entity in pagination.results %}
              {{ _self.table_row(form_entity, attributes) }}
            {% endfor %}
          </tbody>
        </table>

        {{ bootstrap_pagination(pagination) }}

        <small>{{ bootstrap_pagination_info(pagination) }}</small>
      {% else %}
        <p>
          No forms found.
          {% if can_create_form %}
            <a href="{{ create_form_href }}">
              Click here to add a form.
            </a>
          {% endif %}
        </p>
      {% endif %}
    </div>
  </div>
{% endblock %}

{% macro table_row(form_entity, attributes) %}
  {% set row_actions = [] %}

  {% if is_granted(attributes.form.edit, form_entity) %}
    {% set row_actions = row_actions|merge([{
      route: 'form_view',
      route_params: {id: form_entity.id},
      color: 'outline-dark',
      icon: 'eye',
      text: 'View Form',
    }]) %}
  {% endif %}

  {% if is_granted(attributes.form.edit, form_entity) %}
    {% set row_actions = row_actions|merge([{
      route: 'form_edit',
      route_params: {id: form_entity.id},
      color: 'secondary',
      icon: 'pen',
      text: 'Edit Form',
    }]) %}
  {% endif %}

  {% if is_granted(attributes.form.edit, form_entity) %}
    {% set row_actions = row_actions|merge([{
      route: 'form_duplicate',
      route_params: {id: form_entity.id},
      color: 'secondary',
      icon: 'copy',
      text: 'Duplicate Form',
    }]) %}
  {% endif %}

  {% if is_granted(attributes.form.delete, form_entity) %}
    {% set row_actions = row_actions|merge([{
      route: 'form_delete',
      route_params: {id: form_entity.id},
      color: 'danger',
      icon: 'trash',
      text: 'Delete Form',
      confirm: 'Are you sure you want to delete this form? Clicking OK will take you to a verification step to delete this entry.',
    }]) %}
  {% endif %}

  <tr>
    <td>
      {{ form_entity }}
      <br>
      {% if form_entity.isPublished %}
        {{ bootstrap_badge_success('Published') }}
      {% elseif form_entity.isScheduled %}
        {{ bootstrap_badge_warning('Scheduled') }}
      {% else %}
        {{ bootstrap_badge_secondary('Draft') }}
      {% endif %}
    </td>
    <td>
      <small class="d-block">
        {{ form_entity.recipients|join("\n")|nl2br }}
      </small>
    </td>
    <td>{{ shortcode('form_builder(' ~ form_entity.id ~ ')') }}</td>
    <td>{{ form_entity.updatedAt|datetime }}</td>
    <td>
      {% include '@OHMediaBackend/widget/row_actions.html.twig' with {
        row_actions: row_actions,
      } only %}
    </td>
  </tr>
{% endmacro %}
